{
  "extends": "markdownlint/style/google",
  "rules": {
    "MD003": {
      "style": "consistent"
    },
    "MD004": {
      "style": "consistent"
    },
    "MD013": {
      "line_length": 120,
      "heading_line_length": 120,
      "headers": true,
      "headers_line_length": 120,
      "code_blocks": false,
      "code_lines": true,
      "tables": false,
      "headers_only": false
    },
    "MD024": {
      "siblings_only": true
    },
    "MD025": {
      "level": 1
    },
    "MD033": {
      "allowed_elements": ["img", "br", "table", "thead", "tbody", "tr", "th", "td"]
    },
    "MD034": true,
    "MD041": false,
    "no-hard-tabs": true,
    "whitespace": true
  }
}
